<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= pageTitle %></title>
    <link rel="icon" type="image/png" href="/img/logo_pequena.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
</head>

<body>
    <header class="header">
        <form action="/detalhes" method="POST"></form>
            <div class="buscar">
                <input type="text" name="musica" id="musica" placeholder="Pesquise pela mÃºsica" required>
                <button id="lupa" type="submit"><i class="fas fa-search fa-lg"></i></button>
            </div>
        </form>

        <a id="home" href="/"><i class="fas fa-home fa-lg"></i></a>
        <a id="generos" href="/generos"><i class="fas fa-stream"></i></a>
    </header>

    <main class="catalogo">
        <div class="catalogo-musicas">
            <% songs.map ( obj => { %>
                <a class="cartao" href="/detalhes/<%= obj.id %>">
                    <img src="<%= obj.cover %>">
                    <h2><%= obj.title %></h2>
                    <h4><%= obj.artist %></h3>
                    <h5><%= obj.album %></h4>
                </a>
            <% }) %>
        </div>
    </main>
    <script src="/js/script.js"></script>
</body>
</html>